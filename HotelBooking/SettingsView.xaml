<Window x:Class="HotelBooking.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="600"
        Background="#DDF4E7" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Application Settings"
                   FontSize="26" FontWeight="Bold"
                   Foreground="#124170" Margin="0,0,0,15"/>


        <StackPanel Grid.Row="1" Background="#67C090" >

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Hotel Name:" Width="120" FontWeight="Bold"/>
                <TextBox x:Name="txtHotelName" Width="300" FontFamily="Times New Roman" FontWeight="Bold" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Address:" Width="120" FontWeight="Bold"/>
                <TextBox x:Name="txtAddress" Width="300" FontFamily="Times New Roman" FontWeight="Bold" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Phone:" Width="120" FontWeight="Bold"/>
                <TextBox x:Name="txtPhone" Width="300" FontFamily="Times New Roman" FontWeight="Bold" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Email:" Width="120" FontWeight="Bold"/>
                <TextBox x:Name="txtEmail" Width="300" FontFamily="Times New Roman" FontWeight="Bold" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Theme Color:" Width="120" FontWeight="Bold"/>
                <ComboBox x:Name="cmbTheme" Width="300" FontFamily="Times New Roman" FontWeight="Bold" FontSize="12">
                    <ComboBoxItem Content="Green" IsSelected="True"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Dark"/>
                </ComboBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Save" Width="120" Margin="5" Background="#26667F" Foreground="White" Click="BtnSave_Click"/>
                <Button Content="Clear" Width="120" Margin="5" Background="#26667F" Foreground="White" Click="BtnClear_Click"/>
                <Button Content="Close" Width="120" Margin="5" Background="#26667F" Foreground="White" Click="BtnClose_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
