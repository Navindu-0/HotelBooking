<Window x:Class="HotelBooking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NC Hotels (Pvt) Limited - Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FA">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                          
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FF1ABC9C"/>
                            </Trigger>
                           
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FF149174"/>
                            </Trigger>
                            
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bg" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Right" Width="1000">
        <DockPanel Background="#FF2C3E50" Height="70" VerticalAlignment="Top">
            <TextBlock Text="🏨 NC Hotels (Pvt) Limited"
                       Foreground="White"
                       FontFamily="Segoe UI"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </DockPanel>

        <StackPanel Background="#FF34495E" Width="200"  Margin="-800,70,0,0">
            <Button Content="🏠 Dashboard" Style="{StaticResource NavButtonStyle}" RenderTransformOrigin="0.219,2.242" />
            <Button Content="🛏️ Rooms" Style="{StaticResource NavButtonStyle}" Click="Button_Click" />
            <Button Content="👥 Customers" Style="{StaticResource NavButtonStyle}" Click="Button_Click_1" />
            <Button Content="📅 Bookings" Style="{StaticResource NavButtonStyle}" Click="Button_Click_2" />
            <Button Content="💰 Payments" Style="{StaticResource NavButtonStyle}" Click="Button_Click_4" />
            <Button Content="⚙️ Settings" Style="{StaticResource NavButtonStyle}" Click="Button_Click_5" />
            <Button Content="🚪 Logout" Style="{StaticResource NavButtonStyle}" Foreground="Red" Click="Button_Click_3"/>
        </StackPanel>

        <Grid Margin="210,90,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="239*" />
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="257*" />
                <ColumnDefinition Width="257*" />
            </Grid.ColumnDefinitions>

            <Border Background="#FF3498DB" CornerRadius="12" Padding="20" Margin="10,10,10,10" Grid.Column="0" Grid.ColumnSpan="2">
                <StackPanel>
                    <TextBlock Text="Total Rooms" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="120" Foreground="White" FontSize="40" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="#FF2ECC71" CornerRadius="12" Padding="20" Margin="10,10,10,10" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Occupied Rooms" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="85" Foreground="White" FontSize="40" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="#FFE67E22" CornerRadius="12" Padding="20" Margin="10,10,10,10" Grid.Column="3">
                <StackPanel>
                    <TextBlock Text="Bookings Today" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="25" Foreground="White" FontSize="40" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
